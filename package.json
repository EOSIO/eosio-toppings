{
  "name": "eosio-toppings",
  "version": "independent",
  "repository": "git@github.com:EOSIO/eosio-toppings.git",
  "author": "Terry Leung <terry.leung@block.one>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "lerna": "^3.13.1",
    "lerna-changelog": "^0.8.2"
  },
  "changelog": {
    "labels": {
      "breaking": "Breaking Change",
      "enhancement": "Enhancement",
      "bug": "Bug Fix",
      "documentation": "Documentation",
      "internal": "Internal"
    }
  },
  "scripts": {
    "start-gui": "cd packages/eosio-explorer && yarn start",
    "start-nodeos": "cd packages/docker-eosio-nodeos && ./start_eosio_docker.sh --nolog",
    "start-mongodb": "cd packages/docker-mongodb && ./start_mongodb_docker.sh",
    "remove-nodeos": "cd packages/docker-eosio-nodeos && ./remove_eosio_docker.sh",
    "remove-mongodb": "cd packages/docker-mongodb && ./remove_mongodb_docker.sh",
    "start-dockers": "yarn start-mongodb && yarn start-nodeos",
    "remove-dockers": "yarn remove-nodeos && yarn remove-mongodb"
  }
}
